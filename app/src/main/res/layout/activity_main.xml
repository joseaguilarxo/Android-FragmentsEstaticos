<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
    tools:context="com.joseaguilar.a1_fragments_estaticos.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EJEMPLO DE FRAGMENTS ESTATICOS"
        android:textSize="18dp"
        android:textStyle="bold"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.joseaguilar.a1_fragments_estaticos.Fragments.Fragment_Rojo"
            android:id="@+id/FragRojo"
            android:layout_weight="2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            tools:layout="@layout/fragment_fragment__rojo">
        </fragment>
        <fragment
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.joseaguilar.a1_fragments_estaticos.Fragments.Fragment_Verde"
            android:id="@+id/FragVerde"
            android:layout_weight="2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            tools:layout="@layout/fragment_fragment__verde">
        </fragment>

    </LinearLayout>

</LinearLayout>
